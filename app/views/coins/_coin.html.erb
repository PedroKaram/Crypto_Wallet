<div id="<%= dom_id coin %>">
  <table>
    <thead>
      <tr>
        <th>Description</th>
        <th>Acronym</th>
        <th>Image</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size: "25x25" %></td>
      </tr>
    </tbody>
  </table>
</div>